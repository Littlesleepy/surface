{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types":["vite/client"],
    "baseUrl": "./",
    "paths": {
      "@/*":["src/*"],
      "views/*":["src/views/*"],
      "store/*":["src/store/*"],
      "cp/*":["src/components/*"],
      "images/*":["src/assets/images/*"],
      "helper/*":["src/helper/*"],
      "types/*":["src/types/*"],
      "storage/*":["src/storage/*"],
      "mcharts/*":["src/packages/*"]
    },
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
